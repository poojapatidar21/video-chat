  <body>
    <div class="header">
      <div class="para">
        <h2 id="p1"></h2>
      </div>
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video Chat</h3>
      </div>
      <div class="para">
        <h2 id="p2"></h2>
      </div>
    </div> 
  
    <div class="login-content">
      <div class="login-form mt-150">
        <form>
          <div class="form-group">
              <label>Username</label>
              <input type="name" class="form-control" placeholder="Username" id="username">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" placeholder="Password" id="password">
          </div>
          <button type="submit" onclick="login()" class="btn btn-success btn-flat m-b-30 m-t-30">Join Meeting</button>
        </form>
      </div>
    </div>
  
  </body>
  <script src="script.js"></script>
  <script> 
    var today =new Date();
    var date = today.getDate()+'-'+(today.getMonth()+1)+'-'+today.getFullYear();
    var time = today.getHours()+":"+today.getMinutes();
    var Time= time;
    var d = new Date();
    var weekday = new Array(7);
    weekday[0] = "Sunday";
    weekday[1] = "Monday";
    weekday[2] = "Tuesday";
    weekday[3] = "Wednesday";
    weekday[4] = "Thursday";
    weekday[5] = "Friday";
    weekday[6] = "Saturday";

    var n = weekday[d.getDay()];
    var dayDate= n+ ' â€¢ ' +date;

    document.getElementById("p1").innerHTML =Time;
